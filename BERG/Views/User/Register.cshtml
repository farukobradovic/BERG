@model BERG.ViewModels.User.RegisterViewModel

@{
    ViewData["Title"] = "Registracija korisnika";
}


    <div class="row">
        <div class="col-md-4" style="margin:auto;">
            <form method="post">
                <h4>Kreirajte račun.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Firstname">Ime</label>
                    <input asp-for="@Model.Firstname" class="form-control" />
                    <span asp-validation-for="@Model.Firstname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Lastname">Prezime</label>
                    <input asp-for="@Model.Lastname" class="form-control" />
                    <span asp-validation-for="@Model.Lastname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email">Email</label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password">Password</label>
                    <input asp-for="@Model.Password" class="form-control" type="password"/>
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="TitleID" style="width:200px;">Titula: </label>
                    <select asp-items="@Model.Titles" asp-for="TitleID" class="form-control"></select>
                </div>
                <button type="submit" class="btn btn-primary">Potvrdi</button>
            </form>
        </div>

    </div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
