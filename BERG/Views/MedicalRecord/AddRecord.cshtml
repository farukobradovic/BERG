@model BERG.ViewModels.MedicalRecord.MedicalRecordViewModel

@{
    ViewData["Title"] = "Kreraj nalaz";
}

<div class="row">
    <div class="col-md-6" style="margin:auto; padding-top: 50px;">

        <form id="account" method="post">
            <input asp-for="AppointmentID" hidden />
            <h4>Kreiraj nalaz za @Model.Appointment.Patient.Firstname @Model.Appointment.Patient.Lastname.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Description">Opis nalaza</label>
                <textarea asp-for="@Model.Description" class="form-control" rows="10"></textarea>

                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Potvrdi</button>
            </div>
        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

